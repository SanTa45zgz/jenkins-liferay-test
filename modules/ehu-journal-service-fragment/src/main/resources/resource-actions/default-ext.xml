<resource-action-mapping>
	<model-resource>
		<model-name>com.liferay.journal</model-name>
		<portlet-ref>
			<portlet-name>com_liferay_journal_web_portlet_JournalPortlet</portlet-name>
		</portlet-ref>
		<root>true</root>
		<weight>1</weight>
		<permissions>
			<supports>
				<action-key>ADD_ARTICLE</action-key>
				<action-key>ADD_FEED</action-key>
				<action-key>ADD_FOLDER</action-key>
				<action-key>ADD_STRUCTURE</action-key>
				<action-key>ADD_TEMPLATE</action-key>
				<!-- UPV/EHU -->
				<action-key>ADVANCED_EDITION</action-key>
				<!-- UPV/EHU -->
				<action-key>SUBSCRIBE</action-key>
				<action-key>UPDATE</action-key>
				<action-key>VIEW</action-key>
			</supports>
			<site-member-defaults>
				<action-key>VIEW</action-key>
			</site-member-defaults>
			<guest-defaults>
				<action-key>VIEW</action-key>
			</guest-defaults>
			<guest-unsupported>
				<action-key>ADD_ARTICLE</action-key>
				<action-key>ADD_FEED</action-key>
				<action-key>ADD_FOLDER</action-key>
				<action-key>ADD_STRUCTURE</action-key>
				<action-key>ADD_TEMPLATE</action-key>
				<!-- UPV/EHU -->
				<action-key>ADVANCED_EDITION</action-key>
				<!-- UPV/EHU -->
				<action-key>SUBSCRIBE</action-key>
				<action-key>UPDATE</action-key>
			</guest-unsupported>
		</permissions>
	</model-resource>

</resource-action-mapping>